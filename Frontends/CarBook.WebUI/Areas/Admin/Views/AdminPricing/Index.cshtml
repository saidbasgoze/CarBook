@model List<ResultPricingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Ödeme Türleri Alanı</h4>
                        <p class="card-subtitle mb-4">
                           Araçların Günlük,Kiralık,Aylık vb. kiralama opsiyonlarının yer aldığı sayfadır.
                        </p>
                        <div class="table-responsive">
                            @if (Model.Count > 0)
                            {
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Periyot Adı</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                         

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                 <td>@item.Name</td>
                                                <td><a href="/Admin/AdminPricing/RemovePricing/@item.PricingID" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="/Admin/AdminPricing/UpdatePricing/@item.PricingID" class="btn btn-outline-success">Güncelle</a></td>
                                                
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }

                        </div>
                        <a href="/Admin/AdminPricing/CreatePricing/" class="btn btn-outline-primary">Ödeme Türü Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





