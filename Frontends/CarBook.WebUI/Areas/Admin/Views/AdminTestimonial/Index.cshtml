@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Referanslar Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Referanslarla Alakalı Bilgileri Aşağıdan Düzenleyebilirsiniz
                        </p>
                        <div class="table-responsive">
                            @if (Model.Count > 0)
                            {
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th></th>
                                            <th>Ad Soyad</th>
                                            <th>Başlık</th>
                                            <th>Yorum</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                            <th>Aç</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td img src="@item.ImageUrl" width="50" height="50"></td>
                                                <td>@item.Name</td>
                                                <td>@item.Title</td>
                                                <td>@item.Comment</td>
                                                <td>
                                                    <a href="/Admin/AdminTestimonial/RemoveTestimonial/@item.TestiMonialId" class="btn btn-outline-danger">Sil</a>
                                                </td>
                                                <td>
                                                    <a href="/Admin/AdminTestimonial/UpdateTestimonial/@item.TestiMonialId" class="btn btn-outline-success">Güncelle</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                        <a href="/Admin/AdminTestimonial/CreateTestimonial/" class="btn btn-outline-primary">Yeni Referans Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








