@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Referans Güncelleme</h4>
                        <p class="card-subtitle mb-4">
                            Buradan Referans Güncelleyebilirsiniz
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="TestiMonialId" />
                            <div class="form-group">
                                <label for="exampleInputName">Ad Soyad</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Referans Adını Giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTitle">Referans Ünvanı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Referans Ünvanını Giriniz...">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputImageURL">Referans Görsel</label>
                                <input type="text" class="form-control" id="exampleInputImageURL" asp-for="ImageUrl" placeholder="Referans Image Url Giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputComment">Referans Yorumu</label>
                                <textarea rows="5" asp-for="Comment" class="form-control" placeholder="Referans Yorumunu Giriniz..."></textarea>
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Referans Bilgisini Güncelle</button>
                        </form>
                    </div> <!-- end card-body-->
                </div> <!-- end card -->
            </div> <!-- end col -->
        </div> <!-- end row -->
    </div> <!-- end container-fluid -->
</div> <!-- end page-content -->
