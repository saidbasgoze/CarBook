@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni About Girişi</h4>
                        <p class="card-subtitle mb-4">
                            About Alanına veri girebilirsiniz.Yeni About girişi yaparsanız
                            öncekini silin.Sadece 1 tane About olmalı
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Hakkımda Başlığını Giriniz...">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <textarea class="form-control" rows="5" asp-for="Description" placeholder="Hakkımda Açıklamasını Giriniz..."></textarea>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputImageUrl">Image URL</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Image URL  Giriniz...">
                            </div>

                           
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Hakkımda Kaydet</button>
                        </form>
                    </div> <!-- end card-body-->
                </div> <!-- end card -->
            </div> <!-- end col -->
        </div> <!-- end row -->
    </div> <!-- end container-fluid -->
</div> <!-- end page-content -->
