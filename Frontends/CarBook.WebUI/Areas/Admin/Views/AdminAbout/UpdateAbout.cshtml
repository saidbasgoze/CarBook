@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"> About Güncelleme</h4>
                        <p class="card-subtitle mb-4">
                            About Bilgilerini Güncelleyebilirsiniz...
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="AboutId" />
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Hakkımda Başlığını Giriniz...">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <textarea class="form-control" rows="5" asp-for="Description" placeholder="Hakkımda Açıklamasını Giriniz..."></textarea>
                            </div>

                           

                            <div class="form-group">
                                <label for="exampleInputVideoURL">Image URL</label>
                                <input type="text" class="form-control" id="exampleInputVideoURL" asp-for="ImageUrl" placeholder="Hakkımda URL Giriniz...">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Hakkımda Güncelle</button>
                        </form>
                    </div> <!-- end card-body-->
                </div> <!-- end card -->
            </div> <!-- end col -->
        </div> <!-- end row -->
    </div> <!-- end container-fluid -->
</div> <!-- end page-content -->
