@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"> Banner Güncelleme</h4>
                        <p class="card-subtitle mb-4">
                            Banner Bilgilerini Güncelleyebilirsiniz...
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="BannerId" />
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Banner Başlığını Giriniz...">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Banner Açıklamasını Giriniz...">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputVideoDescription">Video Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputVideoDescription" asp-for="VideoDescription" placeholder="Video Açıklamasını Giriniz...">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputVideoURL">Video URL</label>
                                <input type="text" class="form-control" id="exampleInputVideoURL" asp-for="VideoUrl" placeholder="Banner Video URL Giriniz...">
                            </div>
                            <button type="submit" class="btn btn-succes waves-effect waves-light">Banner Güncelle</button>
                        </form>
                    </div> <!-- end card-body-->
                </div> <!-- end card -->
            </div> <!-- end col -->
        </div> <!-- end row -->
    </div> <!-- end container-fluid -->
</div> <!-- end page-content -->
