@model List<ResultAllBlogsWithAuthorsDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Blog Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Aşağıdan Blog bilgilerini düzenleyebilirsiniz.Blog ekleme işlemi admin tarafından yapılmamaktadır.
                            Blog eklemek istiyorsanız sisteme yazar olarak giriş yapmanız gerekmektedir.
                            Her yazar sadece kendi bloglarını düzenleyebilmektedir.Bunun için uygulamada
                            Login/WriterLogin sayfası üzerinden giriş yapabilirsiniz
                        </p>
                        <div class="table-responsive">
                            @if (Model.Count > 0)
                            {
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Başlık</th>
                                            <th>Yazar</th>
                                            <th>Kategori</th>
                                            <th>Tarih</th>
                                            <th>Sil</th>
                                            <th>Blogu aç</th>
                                            <th>Yorumlar</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.Title</td>
                                                <td>@item.AuthorName</td>
                                                <td>@item.CategoryName</td>
                                                <td>@item.CreateDate</td>
                                                <td><a href="/Admin/AdminBlog/RemoveBlog/@item.BlogId" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="/Blog/BlogDetail/@item.BlogId" class="btn btn-outline-dark">Blogu aç</a></td>
                                                <td><a href="/Admin/AdminComment/Index/@item.BlogId" class="btn btn-outline-dark">Yorumlar</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }

                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





