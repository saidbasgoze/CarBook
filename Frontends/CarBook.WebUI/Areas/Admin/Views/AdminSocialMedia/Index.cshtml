@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sosyal Medya ile alakalı Bilgiler Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Sosyal Medya ile ilgili işlemleri aşağıdan yapabilirsiniz.
                            İconlarla alakalı listeye icon listesinden erişebilirsiniz
                        </p>
                        <div class="table-responsive">
                            @if (Model.Count > 0)
                            {
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Başlık</th>
                                            <th>URL</th>
                                            <th>ICON</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                            <th>Aç</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.SocialMediaTitle</td>
                                                <td>@item.Url</td>
                                                <td>@item.Icon</td>
                                                <td>
                                                    <a href="/Admin/AdminSocialMedia/RemoveSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger">Sil</a>
                                                </td>
                                                <td>
                                                    <a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-success">Güncelle</a>
                                                </td>
                                                <td>
                                                    <a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-dark">Aç</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                        <a href="/Admin/AdminSocialMedia/CreateSocialMedia/" class="btn btn-outline-primary">Yeni Sosyal Medya Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






