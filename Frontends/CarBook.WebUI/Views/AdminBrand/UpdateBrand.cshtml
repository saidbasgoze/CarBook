@model UpdateBrandDto
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Araç Marka Güncellemesi</h4>
        <p class="card-subtitle mb-4">Aşağıya yazarak güncelleyebilirsiniz</p>
        <form method="post">
            <input type="hidden" asp-for="brandId" />
         
            <div class="form-group">
                <label for="exampleInputName">Özellik Adı</label>
                <input type="text" class="form-control" id="exampleInputName" asp-for="name" placeholder="Marka Adını Giriniz">
            </div>

            <button type="submit" class="btn btn-primary waves-effect waves-light">Markayı Kaydet</button>
        </form>
    </div>
</div>


