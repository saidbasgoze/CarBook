@model CreateCarDto
@{
    ViewData["Title"] = "CreateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">


        <div class="row">
            <div class="col-xl-12">
                    </div>
                </div>
            </div>
        </div>




<div class="card">
    <div class="card-body">

        <h4 class="card-title">Yeni araç girişi</h4>
        <p class="card-subtitle mb-4">Araç ile ilgili bilgileri eksiksiz girin</p>

        <form method="post">
            <div class="form-group">
                <label for="exampleInputBrand">Marka</label>
                @Html.DropDownListFor(x => x.BrandID, (List<SelectListItem>)ViewBag.BrandValues, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="exampleInputModel">Model</label>
                <input type="text" class="form-control" id="exampleInputModel" asp-for="Model" placeholder="Model giriniz">
            </div>

            <div class="form-group">
                <label for="exampleInputCover">Kapak Fotoğrafı</label>
                <input type="text" class="form-control" id="exampleInputCover" asp-for="CoverImageUrl" placeholder="Kapak Fotoğrafı linkini giriniz">
            </div>

            <div class="form-group">
                <label for="exampleInputKm">KM</label>
                <input type="text" class="form-control" id="exampleInputKm" asp-for="Km" placeholder="Km bilgisini giriniz">
            </div>

            <div class="form-group">
                <label for="exampleInputTransmission">Vites Türü</label>
                <input type="text" class="form-control" id="exampleInputTransmission" asp-for="Transmission" placeholder="Vites Türünü Giriniz">
            </div>

            <div class="form-group">
                <label for="exampleInputSeat">Koltuk Sayısı</label>
                <input type="number" class="form-control" id="exampleInputSeat" asp-for="Seat" placeholder="Koltuk Sayısını Giriniz">
            </div>

            <div class="form-group">
                <label for="exampleInputLuggage">Bagaj Sayısı</label>
                <input type="number" class="form-control" id="exampleInputLuggage" asp-for="Luggage" placeholder="Bagaj Sayısını Giriniz">
            </div>

            <div class="form-group">
                <label for="exampleInputFuel">Yakıt Türü</label>
                <input type="text" class="form-control" id="exampleInputFuel" asp-for="Fuel" placeholder="Yakıt Türünü Giriniz">
            </div>

            <div class="form-group">
                <label for="exampleInputBigImageUrl">Büyük kapak fotoğrafı</label>
                <input type="text" class="form-control" id="exampleInputBigImageUrl" asp-for="BigImageUrl" placeholder="Araç detayında gözükecek kapak fotoğrafı">
            </div>
            
            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
        </form>

    </div> <!-- end card-body-->
</div>

            </div>
<!-- end card-body-->
        </div>
<!-- end card -->
    </div>
<!-- end col -->
</div>
<!-- end page title -->
   
